<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMauiApp.MainPage">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label
            Text="Welcome to my .NET MAUI App!"
            FontSize="28"
            FontAttributes="Bold"
            TextColor="#2C3E50"
            HorizontalOptions="Center" />

        <!-- IMAGE ADDED HERE -->
        <Image
        x:Name="MyImage"
        Source="happy.jpg"
        HeightRequest="150"
        HorizontalOptions="Center"
        VerticalOptions="Center" />

        <Button
            x:Name="CounterBtn"
            Text="Click Me"
            FontSize="18"
            BackgroundColor="#3498DB"
            TextColor="White"
            CornerRadius="12"
            Clicked="OnCounterClicked" />

        <!-- NEW RESET BUTTON -->
        <Button
            x:Name="ResetBtn"
            Text="Reset Counter"
            FontSize="16"
            BackgroundColor="#E74C3C"
            TextColor="White"
            CornerRadius="12"
            Clicked="OnResetClicked" />

        <Label
            x:Name="ResultLabel"
            FontSize="18"
            TextColor="#27AE60"
            HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>
